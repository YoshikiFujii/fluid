<Window
    x:Class="fluid.EventWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gif="http://wpfanimatedgif.codeplex.com"
    xmlns:local="clr-namespace:fluid"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="Fluid EventWindow"
    MinWidth="1280"
    MinHeight="720"
    ui:ThemeManager.IsThemeAware="True"
    ui:TitleBar.Background="{StaticResource PrimaryHeaderBrush}"
    ui:WindowHelper.UseModernWindowStyle="True"
    Closing="EventWindow_Closing"
    ContentRendered="Window_ContentRendered"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="1*" />

        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Menu
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Background="{StaticResource PrimaryHeaderBrush}">
                <MenuItem Header="ファイル">
                    <MenuItem Click="ExportButtonClick" Header="エクスポート" />
                    <MenuItem Click="ImportButtonClick" Header="インポート" />
                    <MenuItem Click="OpenEventFolder" Header="ファイルの場所を開く" />
                    <MenuItem Click="CloseWindowButtonClick" Header="終了" />
                </MenuItem>
                <MenuItem Header="設定">
                    <MenuItem Click="SettingsButtonClick" Header="詳細設定" />
                </MenuItem>
                <MenuItem Header="表示">
                    <MenuItem Click="aboutButtonClick" Header="About" />
                </MenuItem>
            </Menu>
        </Grid>
        <Grid
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="120" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="3*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Image
                        Margin="5,10,5,5"
                        HorizontalAlignment="Left"
                        Source="/img/RyoyuLogo.png" />
                    <TextBlock
                        x:Name="EventHeader"
                        Margin="130,0,0,30"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        FontSize="40"
                        Style="{StaticResource HeaderTextBlockStyle}">
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="TextBlock.Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="EventHeader"
                                            Storyboard.TargetProperty="(TextBlock.Opacity)"
                                            From="0.0"
                                            To="1.0"
                                            Duration="0:0:2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                    <TextBlock
                        x:Name="EventInfoHeader"
                        Margin="130,70,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        FontSize="15"
                        Style="{StaticResource HeaderTextBlockStyle}" />
                </Grid>
                <Rectangle
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10"
                    Fill="{StaticResource PrimaryHeaderBrush}"
                    RadiusX="20"
                    RadiusY="20">
                    <Rectangle.Effect>
                        <DropShadowEffect
                            BlurRadius="20"
                            Opacity="0.5"
                            ShadowDepth="10" />
                    </Rectangle.Effect>
                </Rectangle>
                <Button Grid.Row="1" Width="40" HorizontalAlignment="Right" Margin="0,30,30,0" Click="UpdateProgressbarButtonCllick" VerticalAlignment="Top">
                    <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE72C;" />
                </Button>
                <StackPanel Grid.Row="1">
                    <TextBlock
                        Margin="30,30,0,10"
                        Width="80"
                        FontSize="20"
                        Text="ステータス" HorizontalAlignment="Left" />
                    
                    <TextBlock
                        Margin="30,0,0,0"
                        FontSize="20"
                        Text="全体" />
                    <ProgressBar
                        Name="WholeProgressBar"
                        Grid.Row="1"
                        Height="20"
                        Margin="30,0,30,0"
                        Maximum="100"
                        Minimum="0" />
                    <TextBlock
                        Margin="30,0,0,0"
                        FontSize="20"
                        Text="1年" />
                    <ProgressBar
                        Name="FirstProgressBar"
                        Grid.Row="1"
                        Height="20"
                        Margin="30,0,30,0"
                        Maximum="100"
                        Minimum="0" />
                    <TextBlock
                        Margin="30,0,0,0"
                        FontSize="20"
                        Text="2年" />
                    <ProgressBar
                        Name="SecondProgressBar"
                        Grid.Row="1"
                        Height="20"
                        Margin="30,0,30,0"
                        Maximum="100"
                        Minimum="0" />
                </StackPanel>
                <Rectangle
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="10"
                    Fill="{StaticResource PrimaryHeaderBrush}"
                    RadiusX="20"
                    RadiusY="20">
                    <Rectangle.Effect>
                        <DropShadowEffect
                            BlurRadius="20"
                            Opacity="0.5"
                            ShadowDepth="10" />
                    </Rectangle.Effect>
                </Rectangle>
                <TextBlock
                    Grid.Row="2"
                    Margin="30"
                    FontSize="20"
                    Text="履歴" />
                <Button
                    Grid.Row="2"
                    Margin="30"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="OpenLogFolder"
                    ToolTip="ログフォルダを開く">
                    <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8B7;" />
                </Button>
                <Button
                    Grid.Row="2"
                    Margin="30,30,80,30"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="OpenLogFile"
                    ToolTip="ログファイルを開く">
                    <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8E5;" />
                </Button>
                <Button
                    Grid.Row="2"
                    Margin="30,30,130,30"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="DeleteLogFile"
                    ToolTip="ログファイルを削除">
                    <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE74D;" />
                </Button>
                <Button
                    Grid.Row="2"
                    Margin="30,30,180,30"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="ClearLog"
                    ToolTip="ログをクリア">
                    <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE9F3;" />
                </Button>
                <TextBox
                    x:Name="LogList"
                    Grid.Row="2"
                    Margin="20,80,20,20"
                    Background="{x:Null}"
                    BorderThickness="0,0,0,0"
                    FontSize="18" />
            </Grid>
            <Grid
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Rectangle
                    x:Name="CertificationRectangle"
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="10"
                    Fill="{StaticResource PrimaryHeaderBrush}"
                    RadiusX="20"
                    RadiusY="20">
                    <Rectangle.Effect>
                        <DropShadowEffect
                            BlurRadius="20"
                            Opacity="0.5"
                            ShadowDepth="10" />
                    </Rectangle.Effect>
                </Rectangle>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Image
                        x:Name="StatusAnimation"
                        Width="300"
                        VerticalAlignment="Center"
                        gif:ImageBehavior.AutoStart="True" />
                    <Label
                        x:Name="MessageLabel"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content=""
                        FontSize="16" />
                    <Label
                        x:Name="CertificationLabel"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content=""
                        FontSize="20" />
                    <Label
                        x:Name="CertificationLabel2"
                        Margin="0,100,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content=""
                        FontSize="20" />
                    <TextBlock
                        x:Name="SubStatusText"
                        Grid.Row="2"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Margin="15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontSize="15" />
                    <TextBlock
                        Grid.RowSpan="2"
                        Grid.ColumnSpan="2"
                        Margin="30"
                        FontSize="20"
                        Text="端末" />
                    <Button
                        x:Name="AddTerminalButton"
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="2"
                        Width="40"
                        Height="40"
                        Margin="0,30,30,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Click="AddTerminal">
                        <TextBlock
                            Margin="5,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="25"
                            Text="+" />

                    </Button>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60" />
                        <RowDefinition Height="3*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Rectangle
                        Grid.RowSpan="2"
                        Grid.ColumnSpan="4"
                        Margin="10"
                        Fill="{StaticResource PrimaryHeaderBrush}"
                        RadiusX="20"
                        RadiusY="20">
                        <Rectangle.Effect>
                            <DropShadowEffect
                                BlurRadius="20"
                                Opacity="0.5"
                                ShadowDepth="10" />
                        </Rectangle.Effect>
                    </Rectangle>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="30,20,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="検索" />
                    <ui:AutoSuggestBox
                        x:Name="SearchByRNBox"
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="120"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        PlaceholderText="部屋番号"
                        QueryIcon="Find"
                        TextChanged="SearchBox_TextChanged" />
                    <ui:AutoSuggestBox
                        x:Name="SearchByNameBox"
                        Grid.Row="0"
                        Grid.Column="2"
                        Width="200"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        PlaceholderText="名前"
                        QueryIcon="Find"
                        TextChanged="SearchBox_TextChanged" />
                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="3"
                        Margin="20,0,20,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                        <CheckBox
                            x:Name="Show_Registerd"
                            Checked="FilterList"
                            Content="参加済み"
                            Unchecked="FilterList" />
                        <CheckBox
                            x:Name="Show_NotRegisterd"
                            Checked="FilterList"
                            Content="未参加"
                            Unchecked="FilterList" />
                        <CheckBox
                            x:Name="Show_Absent"
                            Checked="FilterList"
                            Content="不参加"
                            Unchecked="FilterList" />
                    </StackPanel>
                    <ui:ListView
                        x:Name="RosterListView"
                        Grid.Row="1"
                        Grid.ColumnSpan="4"
                        Width="Auto"
                        Margin="20,10,20,20"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        ItemsSource="{Binding RosterItems}"
                        SelectionMode="Single"
                        Visibility="Collapsed">
                        <ui:ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <!--  部屋番号  -->
                                    <TextBlock
                                        Width="50"
                                        Margin="5,12,5,5"
                                        Text="{Binding RoomNumber}" />
                                    <!--  名前  -->
                                    <TextBlock
                                        Width="130"
                                        Margin="5,12,5,5"
                                        Text="{Binding Name}" />
                                    <!--  カナ  -->
                                    <TextBlock
                                        Width="130"
                                        Margin="5,12,5,5"
                                        Text="{Binding Kana}" />
                                    <TextBlock
                                        Width="80"
                                        Margin="5,12,5,5"
                                        Text="{Binding StudentNumber}" />
                                    <TextBlock
                                        Width="30"
                                        Margin="5,12,5,5"
                                        Text="{Binding Year}" />
                                    <!--  ラジオボタンのグループ  -->
                                    <StackPanel
                                        Margin="5"
                                        HorizontalAlignment="Right"
                                        Orientation="Horizontal">
                                        <RadioButton
                                            Checked="RadioButton_Checked"
                                            Content="参加済み"
                                            GroupName="{Binding RoomNumber}"
                                            IsChecked="{Binding IsRegistered}" />
                                        <RadioButton
                                            Checked="RadioButton_Checked"
                                            Content="未参加"
                                            GroupName="{Binding RoomNumber}"
                                            IsChecked="{Binding IsNotRegistered}" />
                                        <RadioButton
                                            Checked="RadioButton_Checked"
                                            Content="不参加"
                                            GroupName="{Binding RoomNumber}"
                                            IsChecked="{Binding IsAbsent}" />
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ui:ListView.ItemTemplate>
                    </ui:ListView>
                </Grid>
            </Grid>

        </Grid>
    </Grid>
</Window>
