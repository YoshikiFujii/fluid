<Window
    x:Class="fluid.Pages.ExportListWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:fluid.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="ExportListWindow"
    Width="450"
    Height="450"
    ui:ThemeManager.IsThemeAware="True"
    ui:TitleBar.Background="{StaticResource PrimaryHeaderBrush}"
    ui:WindowHelper.UseModernWindowStyle="True"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            Margin="15,15,15,15"
            FontSize="24"
            Text="出席状況を出力する" />

        <TextBlock Margin="15,15,15,0" Text="出力する生徒" />
        <Grid Margin="15,0,15,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <CheckBox
                x:Name="CheckedCheckBox"
                Grid.Column="0"
                Content="参加済み" />
            <CheckBox
                x:Name="UncheckedCheckBox"
                Grid.Column="1"
                Content="未参加"
                IsChecked="True" />
            <CheckBox
                x:Name="NotAttendingCheckBox"
                Grid.Column="2"
                Content="不参加" />
        </Grid>

        <TextBlock Margin="15,15,15,0" Text="出力する生徒情報" />
        <Grid Margin="15,0,15,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <CheckBox
                x:Name="roomNumCheckBox"
                Grid.Column="0"
                Content="部屋番号"
                IsChecked="True" />
            <CheckBox
                x:Name="genderCheckBox"
                Grid.Column="1"
                Content="性別"
                IsChecked="True" />
            <CheckBox
                x:Name="nameCheckBox"
                Grid.Column="2"
                Content="名前"
                IsChecked="True" />
            <CheckBox
                x:Name="kanaNameCheckBox"
                Grid.Row="1"
                Grid.Column="0"
                Content="名前(カナ)"
                IsChecked="True" />
            <CheckBox
                x:Name="studentNumCheckBox"
                Grid.Row="1"
                Grid.Column="1"
                Content="学生番号"
                IsChecked="True" />
            <CheckBox
                x:Name="departCheckBox"
                Grid.Row="1"
                Grid.Column="2"
                Content="学科"
                IsChecked="True" />
            <CheckBox
                x:Name="yearCheckBox"
                Grid.Row="2"
                Grid.Column="0"
                Content="区分（在・新）"
                IsChecked="True" />
        </Grid>
        <TextBlock Margin="15,15,15,0" Text="詳細情報 (同ファイルの[詳細情報]シートに書き込まれます。)" />
        <CheckBox
            x:Name="detailCheckBox"
            Margin="15,0,15,0"
            Content="詳細情報"
            IsChecked="True" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="21*" />
                <ColumnDefinition Width="179*" />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="1"
                Margin="15,15,15,15"
                HorizontalAlignment="Stretch"
                Click="ExportExcelFile"
                Content="出力" />
        </Grid>

    </StackPanel>
</Window>
