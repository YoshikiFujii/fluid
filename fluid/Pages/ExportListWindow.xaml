<Window
    x:Class="fluid.Pages.ExportListWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:fluid.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="ExportListWindow"
    Width="450"
    Height="480"
    ui:ThemeManager.IsThemeAware="True"
    ui:TitleBar.Background="{StaticResource PrimaryHeaderBrush}"
    ui:WindowHelper.UseModernWindowStyle="True"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            Margin="15,15,15,15"
            FontSize="24"
            Text="出席状況を出力する" />

        <TextBlock Margin="15,15,15,0" Text="出力する生徒" />
        <Grid Margin="15,0,15,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <CheckBox Grid.Column="0" Content="未参加" />
            <CheckBox Grid.Column="1" Content="参加済" />
            <CheckBox Grid.Column="2" Content="不参加" />
        </Grid>

        <TextBlock Margin="15,15,15,0" Text="出力する生徒情報" />
        <Grid Margin="15,0,15,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <CheckBox Grid.Column="0" Content="部屋番号" />
            <CheckBox Grid.Column="1" Content="性別" />
            <CheckBox Grid.Column="2" Content="氏名" />
            <CheckBox
                Grid.Row="1"
                Grid.Column="0"
                Content="名前(カナ)" />
            <CheckBox
                Grid.Row="1"
                Grid.Column="1"
                Content="学生番号" />
            <CheckBox
                Grid.Row="1"
                Grid.Column="2"
                Content="学科" />
            <CheckBox
                Grid.Row="2"
                Grid.Column="0"
                Content="認証日時" />
        </Grid>
        <TextBlock Margin="15,15,0,0" Text="ファイル名" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>

            <TextBox Margin="15,15,5,15" />
            <TextBlock
                Grid.Column="1"
                Margin="0,0,0,15"
                VerticalAlignment="Bottom"
                Text=".xlsx" />
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="1"
                Margin="15,15,15,15"
                HorizontalAlignment="Stretch"
                Content="出力" />
            <Button
                Grid.Column="0"
                Margin="15,15,15,15"
                HorizontalAlignment="Stretch"
                Content="キャンセル" />
        </Grid>

    </StackPanel>
</Window>
