<ui:ContentDialog
    x:Class="fluid.Pages.ImportDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ModernWpf.Controls;assembly=ModernWpf"
    xmlns:controls1="clr-namespace:ModernWpf.Controls;assembly=ModernWpf.Controls"
    xmlns:controls2="clr-namespace:Windows.UI.Xaml.Controls;assembly=Windows"
    xmlns:controls3="clr-namespace:Windows.UI.Xaml.Controls;assembly=Windows.Foundation.UniversalApiContract"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:fluid.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="インポート"
    SecondaryButtonText="キャンセル"
    mc:Ignorable="d">
    <StackPanel>
        <ProgressBar
            Name="progressBar"
            Height="20"
            Maximum="100"
            Minimum="0"
            Visibility="Collapsed" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Button
                    Grid.Column="0"
                    Width="240"
                    Height="240"
                    Margin="10"
                    HorizontalAlignment="Center"
                    Click="ImportEventClick">
                    <Image Margin="20,0,20,0" Source="/img/ImportEvent.png" />
                </Button>
                <TextBlock
                    Margin="3"
                    HorizontalAlignment="Center"
                    FontSize="25"
                    Text="イベントファイル" />
                <TextBlock
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"
                    FontSize="13">
                    <Run Text="過去に作成したデータまたは" />
                    <LineBreak />
                    <Run Text="他のPCで作成したデータをインポートします" />
                </TextBlock>

            </StackPanel>
            <StackPanel Grid.Column="1">
                <Button
                    Width="240"
                    Height="240"
                    Margin="10"
                    HorizontalAlignment="Center"
                    Click="ImportAbsentClick">
                    <Image Margin="20,0,20,0" Source="/img/ImportAbsent.png" />
                </Button>

                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="25"
                    Text="欠席リスト" />
                <TextBlock
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"
                    FontSize="13">
                    <Run Text="リスト内の生徒を一括で欠席登録します" />
                    <LineBreak />
                    <Run Text="エクセルファイルの1列目に学籍番号を" />
                    <LineBreak />
                    <Run Text="並べてください(1行目を空けないでください)" />
                </TextBlock>
            </StackPanel>
        </Grid>
    </StackPanel>
</ui:ContentDialog>
