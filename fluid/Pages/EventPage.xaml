<Page
    x:Class="fluid.Pages.EventPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:fluid.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="EventPage"
    d:DesignHeight="500"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ui:SimpleStackPanel Spacing="24">
        <Grid Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="70" />
                <RowDefinition Height="60" />
                <RowDefinition Height="50" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Image Source="/img/RyoyuLogo.png" HorizontalAlignment="Right" VerticalAlignment="Top" Width="200" Grid.RowSpan="2"/>

            <TextBlock
                x:Name="EmptyMessageTextBlock"
                Grid.Row="3"
                Margin="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                Text="イベントがありません"
                Visibility="Collapsed" />
            <TextBlock
                x:Name="text_event"
                Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Style="{StaticResource HeaderTextBlockStyle}"
                Text="追加された寮行事" />
            <Button
                x:Name="NewEvent"
                Grid.Row="1"
                Width="80"
                Height="35"
                Margin="10,0,10,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Click="NewEvent_Click"
                Content="新規作成"
                Style="{StaticResource AccentButtonStyle}" />
            <ui:AutoSuggestBox
                x:Name="SuggestBox"
                Grid.Row="2"
                Width="200"
                Margin="10,0,10,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                PlaceholderText="イベントを検索"
                QueryIcon="Find"
                TextChanged="AutoSuggestBox_TextChanged" />

            <DataGrid
                x:Name="EventList"
                Grid.Row="3"
                Width="Auto"
                Margin="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                AutoGenerateColumns="False"
                CanUserReorderColumns="False"
                CanUserSortColumns="True"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="column"
                IsReadOnly="True"
                ItemsSource="{Binding Events}"
                MouseLeftButtonUp="TextBlock_MouseLeftButtonUp"
                SelectionMode="Single"
                SelectionUnit="FullRow"
                Visibility="Visible">

                <DataGrid.Columns>
                    <!--  Event Name Column  -->
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding EventName}"
                        Header="イベント名" />

                    <!--  Event Date Column  -->
                    <DataGridTextColumn
                        Width="80"
                        Binding="{Binding EventDate}"
                        Header="日程" />

                    <!--  Participant Count Column  -->
                    <DataGridTextColumn
                        Width="70"
                        Binding="{Binding Participants}"
                        Header="参加率" />
                    <DataGridTextColumn
                        Width="120"
                        Binding="{Binding RosterName}"
                        Header="名簿" />
                    <!--  Status Column  -->
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding Status}"
                        Header="状態" />

                </DataGrid.Columns>
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Click="DeleteMenuItem_Click" Header="削除" />
                        <MenuItem Click="Event_Open" Header="開く" />
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
        </Grid>
    </ui:SimpleStackPanel>
</Page>
