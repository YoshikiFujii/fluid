<Page
    x:Class="fluid.Pages.RosterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:fluid.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="RosterPage"
    d:DesignHeight="500"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <ui:SimpleStackPanel>
        <Grid Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="70" />
                <RowDefinition Height="60" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ProgressBar
                Name="progressBar"
                Height="20"
                Maximum="100"
                Minimum="0"
                Visibility="Collapsed" />
            <TextBlock
                x:Name="text_Roster"
                Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Style="{StaticResource HeaderTextBlockStyle}"
                Text="登録済寮生名簿" />
            <TextBlock
                x:Name="EmptyMessageTextBlock"
                Grid.Row="3"
                Margin="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                Text="イベントがありません"
                Visibility="Collapsed" />
            <Button
                x:Name="ImportRosterButton"
                Grid.Row="1"
                Width="120"
                Height="35"
                Margin="10,0,10,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Click="ImportRoster_Click"
                Content="名簿をインポート" />
            <TextBlock
                Grid.Row="1"
                Margin="150,10,10,10"
                VerticalAlignment="Center"
                FontSize="14">
                <Run Text="⚠️名簿はxml形式で保存されます。xlsx形式のファイルは" />
                <LineBreak />
                <Run Text="インポート時に自動でxml形式に変換されます。" />
            </TextBlock>

            <DataGrid
                x:Name="RosterDataGrid"
                Grid.Row="3"
                Margin="10"
                AutoGenerateColumns="False"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="column"
                IsReadOnly="True"
                SelectionMode="Single">
                <DataGrid.Columns>
                    <!--  File Name Column  -->
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding FileName}"
                        Header="ファイル名" />
                    <DataGridTextColumn Binding="{Binding TotalCount}" Header="人数" />
                </DataGrid.Columns>
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Click="DeleteSelectedItem" Header="削除" />
                        <MenuItem Click="RosterOption" Header="オプション" />
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
        </Grid>
    </ui:SimpleStackPanel>
</Page>
