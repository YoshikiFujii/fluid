<ui:ContentDialog
    x:Class="fluid.Pages.RosterDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ModernWpf.Controls;assembly=ModernWpf"
    xmlns:controls1="clr-namespace:ModernWpf.Controls;assembly=ModernWpf.Controls"
    xmlns:controls2="clr-namespace:Windows.UI.Xaml.Controls;assembly=Windows"
    xmlns:controls3="clr-namespace:Windows.UI.Xaml.Controls;assembly=Windows.Foundation.UniversalApiContract"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:fluid.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="名簿の設定"
    DefaultButton="Primary"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="保存"
    SecondaryButtonText="キャンセル"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock Text="名簿名" />
        <TextBox x:Name="RosterNameTextBox" Margin="0,5,0,15" />
        <TextBlock Text="名簿ファイルの各項目の列番号を指定してください" />
        <Grid Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="45" />
                <RowDefinition Height="45" />
                <RowDefinition Height="45" />
                <RowDefinition Height="45" />
                <RowDefinition Height="45" />
                <RowDefinition Height="45" />
                <RowDefinition Height="45" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="名前" />
            <TextBlock
                Grid.Row="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="名前（かな）" />
            <TextBlock
                Grid.Row="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="部屋番号" />
            <TextBlock
                Grid.Row="3"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="学籍番号" />
            <TextBlock
                Grid.Row="4"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="性別" />
            <TextBlock
                Grid.Row="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="学科" />
            <TextBlock
                Grid.Row="6"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="学年" />
            <ui:NumberBox
                x:Name="NameNum"
                Grid.Row="0"
                Grid.Column="1"
                Width="65"
                Margin="20,5,0,5"
                HorizontalAlignment="Left" />
            <ui:NumberBox
                x:Name="SNNum"
                Grid.Row="3"
                Grid.Column="1"
                Width="65"
                Margin="20,5,0,5"
                HorizontalAlignment="Left" />
            <ui:NumberBox
                x:Name="RNNum"
                Grid.Row="2"
                Grid.Column="1"
                Width="65"
                Margin="20,5,0,5"
                HorizontalAlignment="Left" />
            <ui:NumberBox
                x:Name="KanaNum"
                Grid.Row="1"
                Grid.Column="1"
                Width="65"
                Margin="20,5,0,5"
                HorizontalAlignment="Left" />
            <ui:NumberBox
                x:Name="GenderNum"
                Grid.Row="4"
                Grid.Column="1"
                Width="65"
                Margin="20,5,0,5"
                HorizontalAlignment="Left" />
            <ui:NumberBox
                x:Name="DepartNum"
                Grid.Row="5"
                Grid.Column="1"
                Width="65"
                Margin="20,5,0,5"
                HorizontalAlignment="Left" />
            <ui:NumberBox
                x:Name="YearNum"
                Grid.Row="6"
                Grid.Column="1"
                Width="65"
                Margin="20,5,0,5"
                HorizontalAlignment="Left" />
        </Grid>
    </StackPanel>
</ui:ContentDialog>