<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  ダークテーマ用の色  -->
    <!--  背景色  -->
    <Color x:Key="PrimaryBackgroundColor">#1E1E1E</Color>
    <!--  文字色  -->
    <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
    <!--  ヘッダー色  -->
    <Color x:Key="PrimaryHeaderColor">#FF3E3E40</Color>


    <!--  SolidColorBrush を作成  -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}" />
    <SolidColorBrush x:Key="PrimaryHeaderBrush" Color="{StaticResource PrimaryHeaderColor}" />
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}" />

    <Style x:Key="HeaderTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="Foreground" Value="White" />
    </Style>

</ResourceDictionary>